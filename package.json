{
  "name": "whatsapp-automation",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "start": "node --enable-source-maps dist/index.js",
    "build": "tsc",
    "wppconnect": "tsx src/wppconnect-api-server.ts",
    "wppconnect-dev": "tsx src/wppconnect-server.ts",
    "start:production": "npm run build && npm run start",
    "start:wppconnect": "npm run build && node --enable-source-maps dist/wppconnect-api-server.js",
    "start:railway": "npm run build && node --enable-source-maps dist/railway-server.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.0",
    "@wppconnect-team/wppconnect": "^1.37.5",
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "openai": "^4.67.3",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.9.1",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  }
}
